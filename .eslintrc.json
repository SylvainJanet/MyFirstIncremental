{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "plugins": ["html", "@typescript-eslint"],
  "extends": ["eslint:all", "plugin:@typescript-eslint/all", "eslint-config-prettier", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "project": "tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/prefer-readonly-parameter-types": "off",
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": ["variable"],
        "modifiers": ["exported"],
        "format": ["PascalCase"]
      },
      {
        "selector": ["variable"],
        "types": ["function"],
        "modifiers": ["exported"],
        "format": ["camelCase"]
      }
    ],
    "no-console": "off",
    "one-var": "off"
    // //"@typescript-eslint/rule-name": "error",
    // "no-shadow": "off",
    // "@typescript-eslint/no-shadow": "error",
    // "no-unused-vars": "off",
    // "@typescript-eslint/no-unused-vars": ["error"],
    // "indent": ["error", 2],
    // "linebreak-style": ["error", "windows"],
    // "semi": ["error", "always"],
    // "func-style": [
    //   2,
    //   "declaration",
    //   {
    //     "allowArrowFunctions": true
    //   }
    // ]
  }
}
