{
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": ["html"],
  "extends": "eslint:all",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "func-style": [
      2,
      "declaration",
      {
        "allowArrowFunctions": true
      }
    ]
  }
}
