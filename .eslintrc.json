{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "plugins": ["html", "@typescript-eslint"],
  "extends": ["eslint:all", "plugin:@typescript-eslint/all", "eslint-config-prettier", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "project": "tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/prefer-readonly-parameter-types": "off",
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": ["variable"],
        "modifiers": ["exported"],
        "format": ["PascalCase"],
        "filter": {
          "regex": "_[0-9]+$",
          "match": false
        }
      },
      {
        "selector": ["variable"],
        "types": ["function"],
        "modifiers": ["exported"],
        "format": ["camelCase"],
        "filter": {
          "regex": "_[0-9]+$",
          "match": false
        }
      }
    ],
    "no-console": "off",
    "one-var": "off",
    "@typescript-eslint/explicit-module-boundary-types": [
      "error",
      {
        "allowedNames": ["isErrorCustom", "isErrorType"]
      }
    ],
    "@typescript-eslint/no-magic-numbers": [
      "error",
      {
        "ignore": [1, -1, 0]
      }
    ],
    "max-params": [
      "error",
      {
        "max": 6
      }
    ],
    "sort-imports": "off",
    "sort-keys": "off",
    "no-warning-comments": "warn",
    "camelcase": [
      "error",
      {
        "allow": ["_[0-9]+$"]
      }
    ],
    "new-cap": [
      "error",
      {
        "capIsNew": false
      }
    ]
  }
}
